<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
   <!--BUTTON WYLOGUJ-->
   <Style TargetType="{x:Type Button}"
          x:Key="ButtonHoverTheme_Green">
      <Setter Property="Background" Value="#003602"/>
      <Setter Property="Template">
         <Setter.Value>
            <ControlTemplate TargetType="{x:Type Button}">
               <Border Background="{TemplateBinding Background}"
                       CornerRadius="15"
                       >
                  <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
               </Border>
            </ControlTemplate>
         </Setter.Value>
      </Setter>
      <Setter Property="Foreground" Value="#2ea52c"/>
      <Style.Triggers>
         <Trigger Property="IsMouseOver" Value="True">
            <Setter Property="Cursor" Value="Hand"/>
         </Trigger>
         <!-- Animates the button on mouse over. -->
         <EventTrigger RoutedEvent="Button.MouseEnter">
            <EventTrigger.Actions>
               <BeginStoryboard>
                  <Storyboard>
                     <ColorAnimation 
                  Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                  From="#003602" To="#005c03" Duration="0:0:0.3" AutoReverse="False" RepeatBehavior="1x"/>
                     <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                     From="#2ea52c" To="White" Duration="0:0:0.3" AutoReverse="False" RepeatBehavior="1x"/>
                  </Storyboard>
               </BeginStoryboard>
            </EventTrigger.Actions>
         </EventTrigger>
         <!-- Returns the button when the mouse leaves. -->
         <EventTrigger RoutedEvent="Button.MouseLeave">
            <EventTrigger.Actions>
               <BeginStoryboard>
                  <Storyboard>
                     <ColorAnimation 
                  Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                  From="#005c03" To="#003602" Duration="0:0:0.3" AutoReverse="False" RepeatBehavior="1x"/>
                     <ColorAnimation Storyboard.TargetProperty="(Button.Foreground).(SolidColorBrush.Color)"
                                     From="White" To="#2ea52c" Duration="0:0:0.3" AutoReverse="False" RepeatBehavior="1x"/>
                  </Storyboard>
               </BeginStoryboard>
            </EventTrigger.Actions>
         </EventTrigger>
      </Style.Triggers>
   </Style>

